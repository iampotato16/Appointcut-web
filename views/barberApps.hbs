<main class="col-lg-9 container p-0" id="main">
   <div class="mt-4 p-3 text-decoration-none">
      <div class="d-flex justify-content-between">
         <span class="fs-5 fw-semibold">{{title}}</span>
         <div class="d-inline float-right">
            <button class="btn btn-dark btn-sm mx-2 i-plus" href="javascript:;" id="BarberApps-add"
               style="height: 30px;">
               <i class="bi bi-plus"></i>
            </button>
            <input type="text" name="search" id="search">
         </div>
      </div>
      <hr>
      {{!-- header with add button --}}
      {{!-- <div class="bg-black px-4 py-3 d-flex justify-content-between">
         <span class="h6 m-0 fw-800 align-self-center">Barbershop Applications</span>
         <a href="javascript:;" id="BarberApps-add" class="i-plus">
            <i class="bi bi-plus-circle-fill float-right" style="color: #f1c644;"></i>
         </a>
      </div> --}}

      {{!-- Table Contents --}}
      <div class="bg-gray p-4 mb-3">
         <table class="table table-hover table-striped m-0">
            <thead>
               {{!-- Table Headers --}}
               <tr>
                  <th scope="col"> <small>ID</small> </th>
                  <th scope="col"> <small>FIRST NAME</small> </th>
                  <th scope="col"> <small>LAST NAME</small> </th>
                  <th scope="col"> <small>EMAIL</small> </th>
                  <th scope="col"> <small>CONTACT</small> </th>
                  <th scope="col" class="align-content-end" style="width: 70px"> <small> ACTIONS </small></th>
               </tr>
            </thead>
            <tbody>
               {{#each rows}}
               <tr class="align-items-center">
                  <td id="BarberApps-OwnerID-{{this.OwnerID}}" class="align-middle">{{this.OwnerID}}</td>
                  <td id="BarberApps-givenName-{{this.OwnerID}}" class="align-middle">{{this.firstName}}</td>
                  <td id="BarberApps-familyName-{{this.OwnerID}}" class="align-middle">{{this.lastName}}</td>
                  <td id="BarberApps-e-mail-{{this.OwnerID}}" class="align-middle">{{this.email}}</td>
                  <td id="BarberApps-contact-{{this.OwnerID}}" class="align-middle">{{this.contact}}</td>
                  <td>
                     <a type="button"><i class=" bi bi-check bi-fm"></i></a>
                     <a type="button"><i class="bi bi-x bi-fm"></i></a>
                  </td>
               </tr>
               {{/each}}
            </tbody>
         </table>
      </div>
   </div>
</main>
{{>modal-dialogbox modalInfo=ownerModal}}