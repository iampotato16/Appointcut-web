{{!-- header with add button --}}
<div class="bg-black px-4 py-3 d-flex justify-content-between">
   <span class="h6 m-0 fw-800 align-self-center">Barbershop Applications</span>
   <a href="javascript:;" id="BarberApps-add" class="i-plus">
      <i class="bi bi-plus-circle-fill float-right" style="color: #f1c644;"></i>
   </a>
</div>

{{!-- Table Contents --}}
<div class="bg-gray px-4 pb-4 pt-2 mb-3">
   <table class="table table-hover table-striped table-sm m-0">
      <thead>
         {{!-- Table Headers --}}
         <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Contact</th>
            <th scope="col" class="justify-content-end" style="width: 40px;">Actions</th>
         </tr>
      </thead>
      <tbody>
         {{#each rows}}
         <tr class="align-items-center">
            <td id="BarberApps-OwnerID-{{this.OwnerID}}" class="align-middle">{{this.OwnerID}}</td>
            <td id="BarberApps-givenName-{{this.OwnerID}}" class="align-middle">{{this.firstName}}</td>
            <td id="BarberApps-familyName-{{this.OwnerID}}" class="align-middle">{{this.lastName}}</td>
            <td id="BarberApps-e-mail-{{this.OwnerID}}" class="align-middle">{{this.email}}</td>
            <td id="BarberApps-contact-{{this.OwnerID}}" class="align-middle">{{this.contact}}</td>
            <td>
               <a type="button"><i class=" bi bi-check bi-fm"></i></a>
               <a type="button"><i class="bi bi-x bi-fm"></i></a>
            </td>
         </tr>
         {{/each}}
      </tbody>
   </table>
</div>

{{>modal-dialogbox modalInfo=ownerModal}}