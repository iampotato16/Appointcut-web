<main class="col-lg-9 container p-0" id="main">
   <div class="mt-4 p-3 text-decoration-none">
      <div class="d-flex justify-content-between">
         <span class="fs-5 fw-semibold">
            <nav aria-label="breadcrumb">
               <ol class="breadcrumb">
                  <li class="breadcrumb-item active" aria-current="page">Customers</li>
               </ol>
            </nav>
         </span>
         <div class="d-inline float-right">
            <td>
               <button href="javascript:;" class="btn btn-dark btn-sm i-plus" id="Customers-add" style="height: 30px;">
                  <i class="bi bi-plus"></i>
               </button>
            </td>
            <input type="text" name="search" id="search">

         </div>
      </div>
      <hr class="mt-0">
      <div class="bg-gray p-4 mb-3">
         <table class="table table-hover table-striped table-sm m-0">
            <thead>
               {{!-- Table Headers --}}
               <tr>
                  <th scope="col"> <small>FIRST NAME</small></th>
                  <th scope="col"> <small>LAST NAME</small></th>
                  <th scope="col"> <small>EMAIL</small></th>
                  <th scope="col"> <small>CONTACT</small></th>
                  <th scope="col"> <small>GUEST</small></th>
                  <th scope="col"> <small>STATUS</small></th>
                  <th scope="col" class="justify-content-end" style="width: 112px;"></th>
               </tr>
            </thead>
            <tbody>
               {{#each rows}}
               <tr class="align-items-center">
                  <td id="Customers-GivenName-{{this.CustomersID}}" class="align-middle">{{this.firstName}}</td>
                  <td id="Customers-FamilyName-{{this.CustomersID}}" class="align-middle">{{this.lastName}}</td>
                  <td id="Customers-E-Mail-{{this.CustomersID}}" class="align-middle">{{this.Email}}</td>
                  <td id="Customers-Contact-{{this.CustomersID}}" class="align-middle">{{this.Contact}}</td>
                  <td id="Customers-Guest-{{this.CustomersID}}" class="align-middle">
                     {{#if IsGuest}}True{{else}}False{{/if}}
                  </td>
                  <td id="Customers-Disabled-{{this.CustomersID}}" class="align-middle">
                     {{#if isDisabled}}
                     <a href="/setActive{{rows.OwnerID}}" class="btn btn-sm btn-success rounded" type="button">
                        ACTIVE</a>
                     {{else}}
                     <button class="btn btn-sm btn-danger rounded"> INACTIVE </button>
                     {{/if}}
                  <td>
                     <button class="edit-{{../customerModal.tableName}} btn btn-dark btn-sm"
                        id="AddCustomer-{{this.CustomersID}}"><i class=" bi bi-pencil"></i></button>
                     <button class="btn btn-dark btn-sm" id=""><i class="bi bi-trash"></i></button>
                     <a href="/customers/view{{this.CustomersID}}" type="button" class="btn btn-dark btn-sm"><i
                           class=" bi bi-eye"></i></a>

                  </td>
               </tr>
               {{/each}}
            </tbody>
         </table>
      </div>
   </div>
</main>

{{>modal-dialogbox modalInfo=customerModal}}