{{!-- header with add button --}}
<div class="bg-black px-4 py-3 d-flex justify-content-between">
   <span class="h6 m-0 fw-800">Customers</span>
   <a href="javascript:;" id="Customers-add" class="i-plus">
      <i class="bi bi-plus-circle-fill float-right"></i>
   </a>
</div>
{{!-- Table Contents --}}
<div class="bg-gray px-4 pb-4 pt-2 mb-3">
   <table class="table table-hover table-striped table-sm m-0">
      <thead>
         {{!-- Table Headers --}}
         <tr>
            <th scope="col">ID</th>
            <th scope="col">Given Name</th>
            <th scope="col">Family Name</th>
            <th scope="col">E-Mail</th>
            <th scope="col">Contact</th>
            <th scope="col">Guest</th>
            <th scope="col">Disabled</th>
            <th scope="col" style="width: 100px">Edit</th>
         </tr>
      </thead>
      <tbody>
         {{#each rows}}
         <tr class="align-items-center">
            <td id="Customers-ID-{{this.ID}}" class="align-middle">{{this.ID}}</td>
            <td id="Customers-GivenName-{{this.ID}}" class="align-middle">{{this.GivenName}}</td>
            <td id="Customers-FamilyName-{{this.ID}}" class="align-middle">{{this.FamilyName}}</td>
            <td id="Customers-E-Mail-{{this.ID}}" class="align-middle">{{this.Email}}</td>
            <td id="Customers-Contact-{{this.ID}}" class="align-middle">{{this.Contact}}</td>
            <td id="Customers-Guest-{{this.ID}}" class="align-middle">{{#if IsGuest}}True{{else}}False{{/if}}</td>
            <td id="Customers-Disabled-{{this.ID}}" class="align-middle">{{#if IsDisabled}}True{{else}}False{{/if}}</td>
            <td><button class="edit-{{../customerModal.tableName}} btn btn-dark" id="Customer-{{this.ID}}">Edit</button></td>
         </tr>
         {{/each}}
      </tbody>
   </table>
</div>

{{>modal-dialogbox modalInfo=customerModal}}
