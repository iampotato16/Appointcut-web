<main class="col-lg-9 container p-0" id="main" class="vh-100">
   <div class="mt-4 p-3 text-decoration-none">
      <div class="d-flex justify-content-between">
         <span class="fs-5 fw-semibold">
            <nav aria-label="breadcrumb">
               <ol class="breadcrumb">
                  <li class="breadcrumb-item active" aria-current="page">Barbershops</li>
               </ol>
            </nav>
         </span>
         <div class="d-inline float-right">
            <button class="btn btn-dark btn-sm i-plus" href="javascript:;" id="Shops-add" style="height: 30px;">
               <i class="bi bi-plus"></i>
            </button>
            <input type="text" name="search" id="search">
         </div>
      </div>
      <hr class="mt-0">

      {{!-- Table Contents --}}
      <div class="bg-gray p-4 mb-3">
         <table class="table table-hover table-striped table-sm m-0">
            <thead>
               {{!-- Table Headers --}}
               <tr>
                  <th scope="col"> <small>SHOP NAME</small> </th>
                  <th scope="col"> <small>ADDRESS</small></th>
                  <th scope="col"> <small>STATUS</small></th>
                  <th scope="col" class="justify-content-end" style="width: 112px;"></th>
               </tr>
            </thead>
            <tbody>
               {{#each rows}}
               <tr class="align-items-center">
                  <td id="Shops-ShopName-{{this.ShopID}}" class="align-middle">{{this.ShopName}}</td>
                  <td id="Shops-Address-{{this.ShopID}}" class="align-middle">{{this.Address}}</td>
                  <td id="Shops-Status-{{this.ShopID}}" class="align-middle">
                     {{#if this.Status}}
                     <button class="btn btn-success btn-sm"> <small>ACTIVE</small></button>
                     {{else}}
                     <button class="btn btn-danger btn-sm"> <small>INACTIVE</small></button>
                     {{/if}}
                  </td>


                  <td id="Shops-Longitude-{{this.ShopID}}" style="display: none;" class="align-middle">
                     {{this.longtitude}}
                  </td>
                  <td id="Shops-Latitude-{{this.ShopID}}" style="display: none;" class="align-middle">{{this.latitude}}
                  </td>
                  <td id="Shops-Address-{{this.ShopID}}" style="display: none;" class="align-middle">{{this.address}}
                  </td>
                  <td id="Shops-Contact-{{this.ShopID}}" style="display: none;" class="align-middle">{{this.contact}}
                  </td>
                  <td id="Shops-E-mail-{{this.ShopID}}" style="display: none;" class="align-middle">{{this.email}}</td>
                  <td id="Shops-BarangayID-{{this.ShopID}}" style="display: none;" class="align-middle">
                     {{this.BarangayID}}
                  </td>
                  <td id="Shops-CityID-{{this.ShopID}}" style="display: none;" class="align-middle">{{this.CityID}}</td>


                  <td>
                     <button class="edit-{{../shopsModal.tableName}} btn btn-dark btn-sm" id="Shops-{{this.ShopID}}">
                        <i class=" bi bi-pencil"></i></button>
                     <button class="btn btn-dark btn-sm" id=""><i class="bi bi-trash"></i></button>
                     <a href="/shops/view{{this.ShopID}}" type="button" class="btn btn-dark btn-sm"><i
                           class=" bi bi-eye"></i></a>
                  </td>
               </tr>
               {{/each}}
            </tbody>
         </table>
      </div>
   </div>
</main>

{{>modal-dialogbox modalInfo=shopsModal}}