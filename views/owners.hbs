<main class="col-lg-9 container p-0" id="main">
   <div class="mt-4 p-3 text-decoration-none">
      <div class="d-flex justify-content-between">
         <span class="fs-5 fw-semibold">
            <nav aria-label="breadcrumb">
               <ol class="breadcrumb">
                  <li class="breadcrumb-item active" aria-current="page">Owners</li>
               </ol>
            </nav>
         </span>
         <div class="d-inline float-right">
            <td>
               <button class="btn btn-dark btn-sm i-plus" href="javascript:;" id="Owners-add" style="height: 30px;">
                  <i class="bi bi-plus"></i>
               </button>
            </td>
            <input type="text" name="search" id="search">

         </div>
      </div>
      <hr class="mt-0">

      {{!-- Table Contents --}}
      <div class="bg-gray p-4 mb-3">
         <table class="table table-hover table-striped table-sm m-0">
            <thead>
               {{!-- Table Headers --}}
               <tr>
                  <th scope="col"> <small>FIRST NAME</small></th>
                  <th scope="col"> <small>LAST NAME</small></th>
                  <th scope="col"> <small>EMAIL</small></th>
                  <th scope="col"> <small>CONTACT</small></th>
                  <th scope="col"> <small>STATUS</small></th>
                  <th scope="col" class="justify-content-end" style="width: 112px;"></th>
               </tr>
            </thead>
            <tbody>
               {{#each rows}}
               <tr class="align-items-center">
                  <td id="Owners-givenName-{{this.OwnerID}}" class="align-middle">{{this.firstName}}</td>
                  <td id="Owners-familyName-{{this.OwnerID}}" class="align-middle">{{this.lastName}}</td>
                  <td id="Owners-e-mail-{{this.OwnerID}}" class="align-middle">{{this.email}}</td>
                  <td id="Owners-contact-{{this.OwnerID}}" class="align-middle">{{this.contact}}</td>
                  <td>
                     {{#if this.OwnerID}}
                     <a href="/setActive{{rows.OwnerID}}" class="btn btn-sm btn-success" type="button"> ACTIVE</a>
                     {{else}}
                     <button class="btn btn-sm btn-warning rounded"> INACTIVE </button>
                     {{/if}}
                  </td>
                  <td>
                     <button class="edit-{{../ownerModal.tableName}} btn btn-dark btn-sm"
                        id="Owners-{{this.OwnerID}}"><i class=" bi bi-pencil"></i></button>
                     <button class="btn btn-dark btn-sm" id=""><i class="bi bi-trash"></i></button>
                     <a href="/owners/view{{this.OwnerID}}" type="button" class="btn btn-dark btn-sm"><i
                           class=" bi bi-eye"></i></a>
                  </td>
               </tr>
               {{/each}}
            </tbody>
         </table>
      </div>
   </div>
</main>

{{>modal-dialogbox modalInfo=ownerModal}}