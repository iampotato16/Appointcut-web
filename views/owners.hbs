{{!-- header with add button --}}
<div class="bg-black px-4 py-3 d-flex justify-content-between">
   <span class="h6 m-0 fw-800 align-self-center">Owners</span>
   <a href="javascript:;" id="Owners-add" class="i-plus">
      <i class="bi bi-plus-circle-fill float-right" style="color: #f1c644;"></i>
   </a>
</div>

{{!-- Table Contents --}}
<div class="bg-gray px-4 pb-4 pt-2 mb-3">
   <table class="table table-hover table-striped table-sm m-0">
      <thead>
         {{!-- Table Headers --}}
         <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">E-Mail</th>
            <th scope="col">Contact</th>
            <th scope="col">Status</th>
            <th scope="col" class="justify-content-end" style="width: 40px;">Edit</th>
         </tr>
      </thead>
      <tbody>
         {{#each rows}}
         <tr class="align-items-center">
            <td id="Owners-OwnerID-{{this.OwnerID}}" class="align-middle">{{this.OwnerID}}</td>
            <td id="Owners-givenName-{{this.OwnerID}}" class="align-middle">{{this.firstName}}</td>
            <td id="Owners-familyName-{{this.OwnerID}}" class="align-middle">{{this.lastName}}</td>
            <td id="Owners-e-mail-{{this.OwnerID}}" class="align-middle">{{this.email}}</td>
            <td id="Owners-contact-{{this.OwnerID}}" class="align-middle">{{this.contact}}</td>
            <td id="Owners-status-{{this.OwnerID}}" class="align-middle">{{this.appStatusID}}</td>
            <td><button class="edit-{{../ownerModal.tableName}} btn btn-dark btn-sm" id="Owners-{{this.OwnerID}}"><i
                     class=" bi bi-pencil"></i></button></td>
         </tr>
         {{/each}}
      </tbody>
   </table>
</div>

{{>modal-dialogbox modalInfo=ownerModal}}