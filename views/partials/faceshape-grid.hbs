<div id="faceShape">
   <div class="bg-black px-4 py-3">
      <div class="d-flex justify-content-between align-items-center">
         <span class="h6 m-0 fw-800">FACESHAPE</span>
         {{!-- BUTTON TO DISPLAY ADD FACESHAPE FORM --}}
         <a href="#faceshape" class="i-plus" onclick="displayAdd(addFaceShape)"><i
               class="bi bi-plus-circle-fill float-right"></i></a>
      </div>

      {{!-- ADD FACESHAPE FORM --}}
      <div id="addFaceShape" style="display: none;" class="bg-black">
         <form class="row g-0 pt-2" action="/addFaceShape" method="POST">
            <div class="col-9 g-0">
               <input type="text" class="form-control font-small rounded-0 mb-3" id="inputAddFaceShape"
                  name="inputAddFaceShape" placeholder="Face Shape">
            </div>
            <div class="col-3 g-0" style="padding-left: 1rem;">
               <button class="btn btn-dark font-small w-100 rounded-0 " type="submit" style="height: 40px;">Add</button>
            </div>
         </form>
      </div>
   </div>

   <div class="bg-gray px-4 pb-4 pt-2 mb-3">
      <table class="table table-hover table-striped table-sm m-0">
         <thead>
            <tr>
               <th scope="col">ID</th>
               <th scope="col">FACE SHAPE</th>
               <th scope="col" style="width: 100px">Actions</th>
            </tr>
         </thead>
         <tbody>
            {{#each parameter}}
            <tr>
               <td scope="row">{{this.FaceShapeID}}</td>
               <td id="faceShape{{this.FaceShapeID}}">

                  {{!-- FACESHAPE NAME --}}
                  <span id="faceShapeValue{{this.FaceShapeID}}">{{this.Name}}</span>

                  {{!-- SHOW TEXT FIELD WHEN UPDATING FACE SHAPE NAME --}}
                  <form action="/editFaceShape{{this.FaceShapeID}}" method="POST"
                     id="editFaceShapeValue{{this.FaceShapeID}}" style="display: none;">
                     <input type="text" name="inputEditFaceShape" id="inputEditFaceShape">
                  </form>

               </td>
               <td>

                  {{!-- DEFAULT ICONS --}}
                  <div id="faceShapeIcons{{this.FaceShapeID}}">
                     {{!-- <a href=" /viewBrgy/{{this.FaceShapeID}}" type="button"><i class="bi bi-eye bi-fm"></i></a>
                     --}}
                     <a type="button" id="{{this.FaceShapeID}}"
                        onclick="displayEdit(id, faceShapeValue{{this.FaceShapeID}}, editFaceShapeValue{{this.FaceShapeID}}, faceShapeIcons{{this.FaceShapeID}}, editFaceShapeIcons{{this.FaceShapeID}})"><i
                           class=" bi bi-pencil bi-fm"></i></a>
                     <a href="/removeFaceShape{{this.FaceShapeID}}" type="button"><i class="bi bi-x bi-fm"></i></a>
                  </div>

                  {{!-- SHOW ICONS WHEN EDITING FACESHAPE --}}
                  <div id="editFaceShapeIcons{{this.FaceShapeID}}" style="display: none;">
                     <a type="button"
                        onclick="document.getElementById('editFaceShapeValue{{this.FaceShapeID}}').submit()"><i
                           class=" bi bi-check bi-fm"></i></a>
                     <a href="" type="button"
                        onclick="displayEdit(id, faceShapeValue{{this.FaceShapeID}}, editFaceShapeValue{{this.FaceShapeID}}, faceShapeIcons{{this.FaceShapeID}}, editFaceShapeIcons{{this.FaceShapeID}})"><i
                           class="bi bi-x bi-fm"></i></a>
                  </div>

               </td>
            </tr>
            {{/each}}
         </tbody>
      </table>
   </div>
</div>