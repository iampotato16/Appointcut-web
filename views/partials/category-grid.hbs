<div id="category">
   <div class="bg-black px-4 py-3">
      <div class="d-flex justify-content-between align-items-center">
         <span class="h6 m-0 fw-800">CATEGORY</span>
         {{!-- BUTTON TO DISPLAY ADD CATEGORY FORM --}}
         <a href="#category" class="i-plus" onclick="displayAdd(addCategory)"><i
               class="bi bi-plus-circle-fill float-right"></i></a>
      </div>

      {{!-- ADD CATEGORY FORM --}}
      <div id="addCategory" style="display: none;" class="bg-black">
         <form class="row g-0 pt-2" action="/fileMaintenance/addCategory" method="POST">
            <div class="col-9 g-0">
               <input type="text" class="form-control font-small rounded-0 mb-3" id="inputAddCategory"
                  name="inputAddCategory" placeholder="Category">
            </div>
            <div class="col-3 g-0" style="padding-left: 1rem;">
               <button class="btn btn-dark font-small w-100 rounded-0 " type="submit" style="height: 40px;">Add</button>
            </div>
         </form>
      </div>
   </div>

   <div class="bg-gray px-4 pb-4 pt-2 mb-3">
      <table class="table table-hover table-striped table-sm m-0">
         <thead>
            <tr>
               <th scope="col">ID</th>
               <th scope="col">Category</th>
               <th scope="col" style="width: 70px">Actions</th>
            </tr>
         </thead>
         <tbody>
            {{#each rowCategory}}
            <tr>
               <td scope="row">{{this.CategoryID}}</td>
               <td id="category{{this.CategoryID}}">

                  {{!-- CATEGORY NAME --}}
                  <span id="categoryValue{{this.CategoryID}}">{{this.Name}}</span>

                  {{!-- SHOW TEXT FIELD WHEN UPDATING CATEGORY NAME --}}
                  <form action="/fileMaintenance/editCategory{{this.CategoryID}}" method="POST"
                     id="editCategoryValue{{this.CategoryID}}" style="display: none;">
                     <input type="text" name="inputEditCategory" id="inputEditCategory">
                  </form>

               </td>
               <td>

                  {{!-- DEFAULT ICONS --}}
                  <div id="categoryIcons{{this.CategoryID}}">
                     {{!-- <a href=" /viewBrgy/{{this.CategoryID}}" type="button"><i class="bi bi-eye bi-fm"></i></a>
                     --}}
                     <a type="button" id="{{this.CategoryID}}"
                        onclick="displayEdit(id, categoryValue{{this.CategoryID}}, editCategoryValue{{this.CategoryID}}, categoryIcons{{this.CategoryID}}, editCategoryIcons{{this.CategoryID}})"><i
                           class=" bi bi-pencil bi-fm"></i></a>
                     <a href="/fileMaintenance/removeCategory{{this.CategoryID}}" type="button"><i
                           class="bi bi-x bi-fm"></i></a>
                  </div>

                  {{!-- SHOW ICONS WHEN EDITING CATEGORY --}}
                  <div id="editCategoryIcons{{this.CategoryID}}" style="display: none;">
                     <a type="button"
                        onclick="document.getElementById('editCategoryValue{{this.CategoryID}}').submit()"><i
                           class=" bi bi-check bi-fm"></i></a>
                     <a href="" type="button"
                        onclick="displayEdit(id, categoryValue{{this.CategoryID}}, editCategoryValue{{this.CategoryID}}, categoryIcons{{this.CategoryID}}, editCategoryIcons{{this.CategoryID}})"><i
                           class="bi bi-x bi-fm"></i></a>
                  </div>
               </td>
            </tr>
            {{/each}}
         </tbody>
      </table>
   </div>
</div>