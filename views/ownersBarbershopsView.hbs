                                                            name="editCategory" id="category"
                                                            onchange="changeServices(this,3)">
                                                            <option selected disabled hidden>{{this.Category}}</option>
                                                            {{#each ../rowsServCategory}}
                                                            <option value="{{this.CategoryID}}">{{this.Name}}</option>
                                                            {{/each}}

                                                        </select>
                                                        <select
                                                            class="form-control form-control-sm mb-2 font-small rounded-0"
                                                            name="editService" id="service3">
                                                            <option value="" disabled selected hidden>
                                                                {{this.ServiceName}}
                                                            </option>
                                                        </select>
                                                    </div>
                                                    <input
                                                        class="form-control form-control-sm mb-2 font-small rounded-0"
                                                        name="editPrice" type="text" value="{{this.Price}}"
                                                        style="width: 300px;">
                                                    <input
                                                        class="form-control form-control-sm mb-2 font-small rounded-0"
                                                        name="editDuration" type="number" value="{{this.Duration}}"
                                                        step="15" min="15">
                                                    <div class="center-div pt-2" style="width: 300px;">
                                                        <button class="btn btn-warning col-6 rounded-0 me-1 fw-800"
                                                            type="submit">
                                                            <small>SAVE</small></button>
                                                        <button class="btn btn-outline-warning col-6 rounded-0 fw-800"
                                                            type="button"
                                                            onclick="toggleDialog('editServices{{this.shopServicesID}}','ownerBarbershopViewPage')">
                                                            <small>CANCEL</small></button>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

